@model IEnumerable<PruebaServidor.Models.InterestedData>
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="text-center">USUARIOS REGISTRADOS</h1>

<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="CrearUsuario" asp-controller="Home" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo Usuario</a>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        <div class="card-border">
            <div class="card-header">
                <h3><strong>Lista de detalles </strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div table-responsive>
                @if (Model.Count() > 0)
                {
                    <table class="table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m=>m.Name)</th>                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m=>item.Name)</td>

                                </tr>
                            }
                        </tbody>
                        <tr>
                            <td>
                                
                            </td>
                        </tr>
                    </table>
                }
                else
                {
                    <p>No existen registros</p>
                }
            </div>
        </div>
    </div>
</div>
